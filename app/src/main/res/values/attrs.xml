<?xml version="1.0" encoding="utf-8"?>

<!--自定义组件的属性-->
<!--declare-styleable name: 自定义控件的名字-->
<!--<attr name: 属性名, attribute: 属性的意思-->

<!-- CircleImageView 是自定义的 View 类-->

<resources>
    <declare-styleable name="CircleImageView">
        <attr name="isCircle" format="boolean"/>
    </declare-styleable>

</resources>